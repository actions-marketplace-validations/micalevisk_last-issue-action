{
  "name": "last-issue-action",
  "private": true,
  "version": "1.2.2",
  "description": "GitHub Action to find and export the number of last updated issue whithin some repository that has given labels.",
  "type": "commonjs",
  "author": "Micael Levi L. C. (https://micalevisk.github.io)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micalevisk/last-issue-action.git"
  },
  "keywords": [
    "github-action",
    "issue",
    "last issue"
  ],
  "scripts": {
    "format": "prettier --config .prettierrc --write .",
    "prepack": "npm run build",
    "prebuild": "npm run clean && npm run compile",
    "build": "ncc --minify --target es2021 -o bundle build dist/index.js",
    "compile": "tsc -p .",
    "watch/compile": "tsc --watch -p .",
    "clean": "rm -rf dist ; rm -rf bundle",
    "exec": "NODE_ENV=development node -r dotenv/config dist",
    "preexec:bundle": "npm run build",
    "exec:bundle": "NODE_ENV=development node -r dotenv/config bundle"
  },
  "dependencies": {
    "@actions/core": "^1.7.0",
    "@octokit/rest": "^18.12.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.30",
    "@vercel/ncc": "^0.33.4",
    "dotenv": "^16.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  }
}
