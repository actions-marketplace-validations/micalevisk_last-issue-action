{
  "compilerOptions": {
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "module": "CommonJS",
    "target": "ES2021",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": [
      "types.d.ts",
      "global.d.ts"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
